# Aslan Drive Production Environment Configuration
# Copy to .env and customize for your deployment

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432
DATABASE_URL=postgresql://trader:your_secure_password_here@aslan_postgres:5432/aslan_drive

# API Configuration
MD_PROVIDER_PORT=8000
LOG_LEVEL=info

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Scheduling Configuration
DATA_INGESTION_CONTINUOUS=false
DATA_INGESTION_INTERVAL=3600
HEALTH_CHECK_CONTINUOUS=false
HEALTH_CHECK_INTERVAL=3600

# Deployment Labels
DEPLOYMENT_ENV=production
DEPLOYMENT_VERSION=0.1.0
DEPLOYMENT_DATE=2024-01-01